<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:padding="@dimen/margin_10"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_4"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1.0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/margin_8"
            android:layout_weight="0.7">


            <TextView
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bus_state"
                android:text="Uttar Pradesh State Road" />

            <TextView
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold"
                android:id="@+id/bus_cmpny"
                android:textColor="@color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Transport Corporation(UPSRTC)" />


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/margin_4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1.0"
                android:layout_weight="1.0">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3.0">


                    <TextView
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@+id/txt_start_time"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="17:10"
                        android:layout_weight="1.0" />

                    <TextView
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/txt_time"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="2h 15m" android:layout_weight="1.0" />

                    <TextView
                        android:textSize="@dimen/text_12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:id="@+id/txt_end_time"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="19:25"
                        android:layout_weight="1.0" />

                </LinearLayout>

                <RelativeLayout android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView android:id="@+id/white_cicle"

                        android:layout_width="@dimen/margin_8"
                        android:layout_height="@dimen/margin_8"
                        android:src="@drawable/ic_circle" />

                    <View android:id="@+id/view"
                        android:background="@color/gray"
                        android:layout_width="wrap_content"
                        android:layout_height="1.0dip"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_toLeftOf="@id/green_circle"
                        android:layout_toRightOf="@id/white_cicle" />

                    <ImageView android:id="@+id/green_circle"
                        android:layout_width="@dimen/margin_8"
                        android:layout_height="@dimen/margin_8"
                        android:src="@drawable/ic_green_circle"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

            </LinearLayout>

            <TextView android:textSize="@dimen/text_12sp"
                android:id="@+id/bus_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="VOLVO (2+2)" />

            <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4">

                <TextView android:textSize="@dimen/text_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ratings" />

                <RatingBar
                    android:id="@+id/MyRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5.0"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    style="?android:ratingBarStyleSmall" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:gravity="right"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.3">

            <RelativeLayout android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/margin_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10">

                <TextView android:textSize="@dimen/text_18dp"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ "
                    android:layout_toLeftOf="@id/txt_price" />

                <TextView android:textSize="@dimen/text_18dp"
                    android:textColor="@color/blue"
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_4"
                    android:text="658"
                    android:layout_alignParentRight="true" />

                <TextView android:textSize="@dimen/text_14sp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_onwards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginRight="@dimen/margin_4"
                    android:text="Onwards"
                    android:layout_below="@id/txt_price"
                    android:layout_alignParentRight="true" />

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_below="@id/txt_onwards"
                    android:layout_alignParentRight="true">

                    <TextView android:textSize="@dimen/text_12sp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:id="@+id/txt_no_seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33" />

                    <TextView android:textSize="@dimen/text_12sp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text=" Seats Left" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View android:background="@color/grey"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />
</android.support.v7.widget.CardView>


