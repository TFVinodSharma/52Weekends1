<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="135.0dip"
    android:layout_marginLeft="@dimen/margin_4"
    android:layout_marginTop="@dimen/margin_4"
    android:layout_marginRight="@dimen/margin_4"
    app:cardCornerRadius="@dimen/margin_4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1.0">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/img_hotel"
            android:background="@drawable/color_bdr"
            android:padding="@dimen/margin_2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/temple"
            android:scaleType="fitXY"
            android:layout_weight="0.3" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/margin_10"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:weightSum="1.0"
            android:layout_weight="0.7">

            <TextView
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold"
                android:id="@+id/img_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karni Fort" />

            <TextView
                android:id="@+id/txt_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chattarput New Delhi"
                android:textSize="@dimen/text_10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/text_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratings" />

                    <RatingBar
                        android:id="@id/MyRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5.0"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        style="?android:ratingBarStyleSmall" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView android:textSize="@dimen/text_14sp"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking" />

                    <TextView
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_gravity="right"
                        android:id="@+id/txt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,000" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:textSize="@dimen/text_10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:id="@+id/btn_view"
                android:background="@drawable/btn_bkg"
                android:padding="@dimen/margin_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="view  details" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>