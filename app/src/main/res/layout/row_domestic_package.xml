<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10">

    <LinearLayout
        android:id="@+id/layout_package"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="120.0dip"
            android:layout_margin="@dimen/margin_4"
            android:scaleType="fitXY"
            android:src="@drawable/temple" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_now"
                android:textSize="@dimen/text_12dp" />

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:text="@string/login_now"
                android:textSize="@dimen/text_10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin_4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:padding="@dimen/margin_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR "
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_12dp" />

                <TextView
                    android:id="@+id/txt_p_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_4"
                    android:text="3,658"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_12dp" />
            </LinearLayout>

           <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
               android:padding="@dimen/margin_4"
               android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_d_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="3"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_10dp" />
                <TextView
                    android:id="@+id/txt_p_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="days"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_10dp" />
                <TextView
                    android:id="@+id/txt__time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="3"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_10dp" />
                <TextView
                    android:id="@+id/txt_pe_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="days"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_10dp" />
            </LinearLayout>

            <!--<TextView
                android:id="@+id/txt_pe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="days"
                android:textSize="@dimen/text_10dp" />
-->


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>