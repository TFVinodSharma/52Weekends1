<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.2">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:weightSum="3.0">

                <TextView
                    android:textSize="@dimen/text_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@id/txt_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:text="17:10"
                    android:layout_weight="1.0" />

                <TextView
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:text="2h 15m"
                    android:layout_weight="1.0" />

                <TextView
                    android:textSize="@dimen/text_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="bottom"
                    android:id="@id/txt_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:text="19:25"
                    android:layout_weight="1.0" />
            </LinearLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10">

                <ImageView
                    android:id="@id/white_cicle"
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="@dimen/margin_8"
                    android:src="@drawable/ic_circle" />

                <View
                    android:id="@id/view"
                    android:background="@color/gray"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:layout_above="@id/green_circle"
                    android:layout_below="@id/white_cicle" />

                <ImageView
                    android:id="@id/green_circle"
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="@dimen/margin_8"
                    android:src="@drawable/ic_green_circle"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:weightSum="4.0"
            android:layout_weight="0.8">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/margin_10"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <TextView
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_depart_port"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Indira Gandhi International Airport" />

                <TextView
                    android:textSize="@dimen/text_10dp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_depart_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="DEL, New Delhi, India" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_weight="2.0">

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/gray_bdr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/img_flight"
                        android:padding="@dimen/margin_4"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        android:src="@drawable/temple"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_10">

                        <TextView
                            android:textSize="@dimen/text_14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jet Airways" />

                        <TextView
                            android:textSize="@dimen/text_12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jet Airways" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:id="@+id/txt_detail_more"
                            android:padding="@dimen/margin_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DETAILS"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black"
                            android:drawableEnd="@drawable/ic_arrow_drop_down_black" />

                        <TextView
                            android:textSize="@dimen/text_12sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:id="@+id/txt_detail_less"
                            android:padding="@dimen/margin_4"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DETAILS"
                            android:drawableRight="@drawable/ic_arrow_drop_up_black_24dp"
                            android:drawableEnd="@drawable/ic_arrow_drop_up_black_24dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:textSize="@dimen/text_10dp"
                    android:id="@+id/txt_breif_details"
                    android:background="@drawable/gray_bdr"
                    android:padding="@dimen/margin_10"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Free Meals Served" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/gray_bdr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/img_bag"
                        android:padding="@dimen/margin_4"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        android:src="@drawable/temple"
                        android:scaleType="fitXY" />

                    <TextView
                        android:textSize="@dimen/text_14sp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_margin="@dimen/margin_4"
                        android:text="7 Kgs hand baggage | 1 Piece (Max 15 kgs) check in baggage" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="bottom"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <TextView
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_arrival_port"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Indira Gandhi International Airport" />

                <TextView
                    android:textSize="@dimen/text_10dp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_arrival_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="DEL, New Delhi, India" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>