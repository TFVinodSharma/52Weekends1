<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@id/appBarLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyAppTheme.AppBarOverlay"
            android:visibility="visible">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbardestination"
                android:layout_width="fill_parent"
                android:layout_height="?actionBarSize"
                android:background="?colorPrimary"
                app:titleTextColor="@color/white" />
        </android.support.design.widget.AppBarLayout>


        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:padding="8.0dip"
            app:cardCornerRadius="6.0dip"
            app:cardUseCompatPadding="true">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:selectableItemBackground"
                        android:padding="0.0dip">

                        <ImageView
                            android:id="@+id/impact_image"
                            android:layout_width="fill_parent"
                            android:layout_height="180.0dip"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_4"
                        android:text="Agra"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_18dp" />

                    <RatingBar
                        android:id="@+id/ratingbar"
                        style="?android:ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="5.0"
                        android:stepSize="0.1" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2.0dip"
                        android:background="@color/bg_gray"
                        android:padding="@dimen/margin_4" />

                    <TextView
                        android:id="@+id/impact_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8.0dip"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <!--getting there-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Getting there"
                            android:textSize="@dimen/text_20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gettingthere"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="@dimen/text_16dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <!--By Train-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="By Train"
                            android:textSize="@dimen/text_20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/train" />

                        <TextView
                            android:id="@+id/train"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="@dimen/text_16dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <!--BY Road-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="By Road"
                            android:textSize="@dimen/text_20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/road" />

                        <TextView
                            android:id="@+id/roadimage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <!--By Air-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="By Air"
                            android:textSize="@dimen/text_20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/air" />

                        <TextView
                            android:id="@+id/airplaneimage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Visit and Do"
                            android:textSize="@dimen/text_20dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dos" />

                        <TextView
                            android:id="@+id/dosimage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Accommodation"
                            android:textSize="@dimen/text_20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/accomodations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Food"
                            android:textSize="@dimen/text_20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/foodtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16dp"
                            android:textStyle="normal" />

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>